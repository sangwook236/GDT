EXE_NAME=arith_test
SRCS=main.cpp
OBJS=$(SRCS:.cpp=.o)

CC=gcc
CXX=g++
LD=ld
AR=ar
RANLIB=ranlib
RM=rm -f

CFLAGS=
CXXFLAGS=-c -std=c++17 -g2 -O2 -Wall -fPIC -DUNICODE -D_UNICODE
#CXXFLAGS=-c -std=c++17 -g2 -O2 -Wall -fPIC -D_DEBUG -DUNICODE -D_UNICODE
LDFLAGS=-L. -larithmetic

#--------------------
all: $(SRCS) $(EXE_NAME)

$(EXE_NAME): $(OBJS) 
	$(CXX) -o $@ $^ $(LDFLAGS)

.cpp.o:
	$(CXX) -o $@ $< $(CXXFLAGS)

clean:
	$(RM) $(EXE_NAME) $(EXE_NAME).exe $(OBJS) *~ core
